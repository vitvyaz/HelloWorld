<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info">
    <Appenders>
        <File name="MyFile" fileName="ua.vitvyaz.helloworld.HelloWorld.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>


